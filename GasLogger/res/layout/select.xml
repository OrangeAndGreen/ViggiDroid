<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"    
    >
    
    <LinearLayout
        android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="right"
    	>
    	<Button
    		android:id="@+id/button_quit_select"
    		android:layout_gravity="right"
    		android:layout_width="75dp"
    		android:layout_height="50dp"
    		android:text="@string/quit"
    		android:textSize="18sp"
    		android:shadowColor="#222222"
    		android:shadowRadius="3"
    		android:shadowDx="1"
    		android:shadowDy="1"
    		android:background="@drawable/button_background"
    		/>
    </LinearLayout>
    
    <include layout="@layout/divider"/>
    
    <Button
    	android:id="@+id/button_lowfuel"
    	android:layout_width="fill_parent"
    	android:layout_height="50dp"
    	android:text="@string/selectlowfuel"
    	android:textSize="18sp"
   		android:shadowColor="#222222"
   		android:shadowRadius="3"
   		android:shadowDx="1"
   		android:shadowDy="1"
    	android:background="@drawable/button_background"
    	/>

    <Button
    	android:id="@+id/button_gas"
    	android:layout_width="fill_parent"
    	android:layout_height="50dp"
    	android:text="@string/selectfuel"
		android:textSize="18sp"
   		android:shadowColor="#222222"
   		android:shadowRadius="3"
   		android:shadowDx="1"
   		android:shadowDy="1"    	
    	android:background="@drawable/button_background"
    	/>

    <Button
    	android:id="@+id/button_view"
    	android:layout_width="fill_parent"
    	android:layout_height="50dp"
    	android:text="@string/selectview"
    	android:textSize="18sp"
   		android:shadowColor="#222222"
   		android:shadowRadius="3"
   		android:shadowDx="1"
   		android:shadowDy="1"
    	android:background="@drawable/button_background"
    	/>
    <Button
    	android:id="@+id/button_settings"
    	android:layout_width="fill_parent"
    	android:layout_height="50dp"
    	android:text="@string/selectsettings"
    	android:textSize="18sp"
   		android:shadowColor="#222222"
   		android:shadowRadius="3"
   		android:shadowDx="1"
   		android:shadowDy="1"    	
    	android:background="@drawable/button_background"
    	/>
    
</LinearLayout>